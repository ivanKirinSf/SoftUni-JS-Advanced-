function largestNum (num1, num2, num3){

    let maxNum = 0;

    if(num1 > num2){

        if(num1 > num3){

            maxNum = num1;

        }else {

            maxNum = num3

        }

    }else{

        if(num2 > num3){

            maxNum = num2;

        }else{
            
            maxNum = num3;

        }
    }

    console.log(`The largest number is ${maxNum}.`)


}

largestNum (-3, -5, -22.5)
